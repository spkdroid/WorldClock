<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Analog Clock Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/widget_analog_clock"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Analog Clock"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Time and Location Info Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:gravity="start" />

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, Jan 01"
            android:textSize="11sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="2dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/widget_timezone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Time"
            android:textSize="9sp"
            android:textColor="#99FFFFFF"
            android:layout_marginTop="1dp"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Navigation indicators -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_city_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 3"
                android:textSize="8sp"
                android:textColor="#66FFFFFF"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_next"
                android:tint="#99FFFFFF"
                android:contentDescription="Next City" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
